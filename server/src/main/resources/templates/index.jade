                    a(id="open" href="#") Open
                    :coffeescript
                      $('#open').click => $('#file').click()
                    form.hide(method="post" action="/open")
                      input(id="file" type="file" required=true)
                  li
                    a(id="quit" href="#") Quit
                    :coffeescript
                      $('#quit').click => $.post('/quit')
